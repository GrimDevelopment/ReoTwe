<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.digisocken.twthaar.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tw__blue_default"
            android:elevation="10dp"
            android:padding="5dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cleanUpBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/cleanUpBtn"
                android:layout_toStartOf="@+id/cleanUpBtn"
                android:background="@color/textBack"
                android:ems="10"
                android:hint="@string/search"
                android:inputType="textPersonName"
                android:textColor="@color/textFront" />

            <ImageButton
                android:id="@+id/cleanUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/addStartBtn"
                android:layout_toStartOf="@+id/addStartBtn"
                android:background="@android:color/transparent"
                android:padding="3dp"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/addStartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button"
                android:layout_toStartOf="@+id/button"
                android:background="@android:color/transparent"
                android:padding="3dp"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <ImageButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/tw__login_btn_pressed"
                android:padding="3dp"
                app:srcCompat="@android:drawable/ic_menu_send" />

        </RelativeLayout>

        <ListView
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:id="@+id/list"
            android:dividerHeight="0dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </ListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
