<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tweetUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tweetGoto"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="\@example"
        android:textColor="@android:color/white"
        android:background="@color/tw__blue_pressed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tweetGoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/gotoHint"
        android:textColor="@android:color/white"
        android:background="@color/tw__blue_default"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/tweetContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tweetUser"
        android:elevation="2dp"
        android:padding="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="0dp"
 >

        <TextView
            android:id="@+id/tweetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tweetDate"
            style="@style/tw__TweetText"
            android:textSize="15dp"
            android:paddingBottom="5dp"
            android:text="Velit distinctio aut voluptate hic fugit error voluptatem. Exercitationem atque provident in qui et incidunt exercitationem. Officiis laudantium nam et. Ut est ut maxime nam. Odio aut provident qui voluptatum veritatis. Voluptatem ut quia rem id quae suscipit."
            android:textColor="@android:color/black" />
    </FrameLayout>

    <TextView
        android:id="@+id/tweetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweetUser"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tweetStats"
        android:elevation="1dp"
        android:padding="1dp"
        android:text="2017-08-12 18:45"
        android:textColor="@color/tw__light_gray"
        android:textSize="9dp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/tweetStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweetGoto"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"
        android:padding="1dp"
        android:text="rt: 123  like: 453"
        android:textColor="@color/tw__light_gray"
        android:textSize="9dp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>